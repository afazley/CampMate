<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CampMate.MainPage">
    <StackLayout Padding="20">
        <Label Text="Nearby Campsites" FontSize="24" />

        <ListView ItemsSource="{Binding Campsites}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10" Orientation="Horizontal" Spacing="10">
                            <Label Text="🏕️" FontSize="20" VerticalOptions="Center"/>
                            <StackLayout Orientation="Vertical">
                                <Label Text="{Binding Name}" TextColor="DarkGreen" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Location}" TextColor="DimGray" FontSize="14"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="View Cached Campsites" Clicked="OnViewCachedClicked"/>
        <Button Text="Cache Nearby Campsites" Clicked="OnCacheNowClicked" />
    </StackLayout>
</ContentPage>
